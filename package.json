{
  "name": "galileo",
  "scripts": {
    "build:js": "browserify --debug -d app/index.js -o bundle.js -t babelify",
    "build-fp:js": "browserify --full-paths -d app/index.js -o bundle.js -t babelify",
    "watch:js": "watchify --debug -d app/index.js -o bundle.js -t babelify",
    "minify:js": "uglifyjs bundle.js -o dist/bundle.min.js --screw-ie8 -c",
    "inspect:gzip": "npm run build:js && npm run minify:js && gzip-size bundle.min.js | pretty-bytes",
    "inspect:bundle": "browserify --full-paths -d app/index.js -o bundle.js -t babelify && uglifyjs bundle.js -o bundle.min.js -mc && discify bundle.min.js > disc.html --open",
    "minify:css": "cleancss -o dist/main.min.css app/styles/main.css",
    "production:build": "npm run build:js | npm run minify:css && npm run minify:js",
    "production:push": "gh-pages -d dist",
    "deploy": "npm run production:build && npm run production:push"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "disc": "^1.3.2",
    "fetch-mock": "^5.5.0",
    "gh-pages": "^0.12.0",
    "gzip-size-cli": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "node-fetch": "^1.6.3",
    "pretty-bytes": "^4.0.2",
    "tape": "^4.6.2",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "preact": "^6.4.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
