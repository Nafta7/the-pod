{
  "name": "galileo",
  "scripts": {
    "build:js": "browserify -d app/index.js -o bundle.js -t babelify",
    "watch:js": "watchify -d app/index.js -o bundle.js -t babelify",
    "minify:js": "uglifyjs bundle.js -o bundle.min.js --screw-ie8 -c",
    "size": "gzip-size bundle.min.js | pretty-bytes"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "fetch-mock": "^5.5.0",
    "gzip-size-cli": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "node-fetch": "^1.6.3",
    "pretty-bytes": "^4.0.2",
    "tape": "^4.6.2",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "preact": "^6.4.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
