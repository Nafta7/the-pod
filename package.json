{
  "name": "the-pod",
  "scripts": {
    "serve": "browser-sync start --server './' --index 'index.html' --files 'dist/main.css, ./*.js'",
    "start": "npm run watch:js & npm run watch:css & npm run serve",
    "build": "npm run build:js | npm run build:css",
    "minify": "npm run minify:js | npm run minify:css",
    "build:js": "browserify --debug -d app/index.js -o bundle.js -t babelify",
    "build:css": "postcss -c ./postcss-config.js",
    "build:main:css": "postcss -u postcss-import -u postcss-nesting -u postcss-css-variables -u css-mqpacker -u postcss-custom-media -p sugarss app/styles/main.sss -d dist/",
    "build-fp:js": "browserify --full-paths -d app/index.js -o bundle.js -t babelify",
    "watch:js": "watchify --debug -d app/index.js -o bundle.js -t babelify",
    "watch:css": "postcss -c ./postcss-config.js -w",
    "minify:js": "uglifyjs bundle.js -o dist/bundle.min.js --screw-ie8 -c",
    "minify:css": "postcss -u cssnano dist/main.css -o dist/main.min.css",
    "inspect:gzip": "npm run build:js && npm run minify:js && gzip-size bundle.min.js | pretty-bytes",
    "inspect:bundle": "browserify --full-paths -d app/index.js -o bundle.js -t babelify && uglifyjs bundle.js -o bundle.min.js -mc && discify bundle.min.js > disc.html --open",
    "preproduction:build": "npm run mode:production",
    "production:build": "npm run build && npm run minify",
    "postproduction:build": "npm run mode:development",
    "production:publish": "gh-pages -d dist",
    "publish": "npm run production:build && npm run production:publish",
    "mode:development": "json -I -f appconfig.json -e 'this.mode=`dev`'",
    "mode:production": "json -I -f appconfig.json -e 'this.mode=`prod`'"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.10.0",
    "disc": "^1.3.2",
    "fetch-mock": "^5.5.0",
    "gh-pages": "^0.12.0",
    "gzip-size-cli": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "json": "^9.0.4",
    "node-fetch": "^1.6.3",
    "postcss-cli": "^2.6.0",
    "postcss-css-variables": "^0.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-easy-import": "^1.0.1",
    "postcss-nesting": "^2.3.1",
    "postcss-responsive-type": "^0.5.1",
    "pretty-bytes": "^4.0.2",
    "sugarss": "^0.2.0",
    "tape": "^4.6.2",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "preact": "^6.4.0",
    "preact-css-transition-group": "^1.1.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  }
}
