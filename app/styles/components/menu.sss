.menu
  font-size: 1em
  display: flex
  list-style: none
  align-items: center
  justify-content: center
  align-items: stretch
  flex: 1 0 auto
  margin: 0
  position: absolute
  left: 0
  right: 0
  padding: 0
  z-index: 5

  @media (--small-viewport)
    margin-top: 0.4rem
    font-size: 0.9em

  & li
    display: flex
    flex: 1

    @media (--small-viewport)
      flex: none

.menu-item-settings
  position: relative

