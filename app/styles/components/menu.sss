.menu
  font-size: 1em
  display: flex
  list-style: none
  align-items: center
  justify-content: center
  align-items: stretch
  flex: 1 0 auto
  position: absolute
  z-index: 5
  padding: 0
  width: 100%
  left: 0
  margin: 0

  @media (--small-viewport)
    width: auto
    left: 50%
    transform: translateX(-50%)
    margin-top: 0.4rem
    font-size: 0.9em

  & li
    display: flex
    flex: 1

    @media (--small-viewport)
      flex: none

.menu-item-settings
  position: relative

