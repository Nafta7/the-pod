.about-container
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%,-50%)
  padding: 0 1em
  width: 100%

  @media (--small-viewport)
    width: auto

.about
  background: var(--black)
  color: var(--white)
  padding: 1.5em

  @media (--small-viewport)
    width: var(--text-width-small)

  @media (--medium-viewport)
    width: var(--text-width-medium)

.about-credits-list
  padding-left: 2em
  list-style: square

