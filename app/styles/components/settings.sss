.settings-menu
  background-color: rgba(25,25,25,0.9)
  color: var(--white)
  position: absolute
  transition: opacity 0.1s linear
  min-width: 12em
  z-index: -1
  top: 110%
  right: 0
  opacity: 0
  visibility: hidden

  &.show
    opacity: 1
    visibility: visible

.settings-item
  padding: 0.5rem 1rem
  display: flex
  justify-content: space-between

  &:not(:last-child)
    border-bottom: 1px solid var(--white)

  & > label
    width: 100%

  & > label[disabled]
    color: var(--light-gray)

  & > .link
    color: white
    text-decoration: none
    width: 100%

    &:hover
      text-decoration: underline