.info
  background: rgba(0,0,0,0.8)
  color: var(--white)
  padding: 1em
  font-size: 0.8rem
  position: fixed
  z-index: 1
  bottom: 0
  opacity: 0
  visibility: hidden
  transition-duration: 0.4s

  @media (--small-viewport)
    top: 50%
    transform: translateY(-50%)
    font-size: 1.2rem
    bottom: auto

.info-title
  font-size: 1.2em
  display: flex
  justify-content: space-between

  @media (--small-viewport)
    font-size: 1.5em

.info-text
  font-size: 1.0em

  @media (--only-small-viewport)
    max-height: 225px
    overflow: scroll
