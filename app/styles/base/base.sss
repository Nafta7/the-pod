html
  box-sizing: border-box
  font-size: responsive 12px 22px
  font-range: 320px 1280px
  line-height: responsive 16px 32px
  line-height-range: 320px 1280px

body
  background-color: var(--bg-major-color)
  background-image: linear-gradient(-20deg, var(--bg-major-color) 0%, var(--bg-minor-color) 100%)
  overflow: hidden
  margin: 0
  font-family: var(--font-sans-serif)


*, *:before, *:after
  box-sizing: inherit

a, button
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
