html
  box-sizing: border-box
  font-size: responsive 14px 22px
  font-range: 420px 1280px

body
  background-color: var(--bg-major-color)
  background-image: linear-gradient(-20deg, var(--bg-major-color) 0%, var(--bg-minor-color) 100%)
  overflow: hidden

*, *:before, *:after
  box-sizing: inherit

a, button
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)

body
  margin: 0
