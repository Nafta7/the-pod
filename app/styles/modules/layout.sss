.container
  height: 100vh
  display: flex
  align-items: center
  justify-content: center
  color: var(--white)

.image-wrapper
  width: 100%
  height: 100vh
  object-fit: cover
  object-position: 50% 50%

  &[src=""]
    display: none

.nav-wrapper
  position: absolute
  left: 0
  right: 0
  width: 95%
  margin: auto
  display: flex
  align-items: center
  justify-content: space-between

.title
  color: var(--white)
  font-size: 1.5em
  margin: 0
  line-height: 1
  flex-grow: 0
